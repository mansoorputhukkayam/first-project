<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>OTP Verification</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <style>
    body {
      background-color: #f8f9fa;
    }

    .otp-container {
      margin-top: 100px;
    }

    .otp-input {
      width: 50px;
      height: 50px;
      font-size: 24px;
      text-align: center;
      border-radius: 8px;
      border: 2px solid #ced4da;
      transition: border-color 0.3s;
    }

    .otp-input:focus {
      border-color: #007bff;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="row justify-content-center otp-container">
      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title text-center mb-4">Enter OTP</h5>
            <form method="post" action="/verifyForgotPassword">
              <div class="row justify-content-center mb-3">
                <div class="col-1 mx-1">
                  <input type="text" class="form-control otp-input" name="otp" maxlength="1">
                </div>
                <div class="col-1 mx-1">
                  <input type="text" class="form-control otp-input" name="otp" maxlength="1">
                </div>
                <div class="col-1 mx-1">
                  <input type="text" class="form-control otp-input" name="otp" maxlength="1">
                </div>
                <div class="col-1 mx-1">
                  <input type="text" class="form-control otp-input" name="otp" maxlength="1">
                </div>
                <div class="col-1 mx-1">
                  <input type="text" class="form-control otp-input" name="otp" maxlength="1">
                </div>
                <div class="col-1 mx-1">
                  <input type="text" class="form-control otp-input" name="otp" maxlength="1">
                </div>
              </div>
              <div class="text-center">
                <button type="submit" class="btn btn-primary">Verify</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Add event listeners to handle input and backspace key events
    const otpInputs = document.querySelectorAll('.otp-input');
    otpInputs.forEach((input, index) => {
      input.addEventListener('input', () => {
        if (input.value) {
          const nextInput = otpInputs[index + 1];
          if (nextInput) {
            nextInput.focus();
          }
        }
      });

      input.addEventListener('keydown', (event) => {
        if (event.key === 'Backspace' && input.value === '') {
          const previousInput = otpInputs[index - 1];
          if (previousInput) {
            previousInput.focus();
          }
        }
      });
    });
  </script>
</body>
</html>
