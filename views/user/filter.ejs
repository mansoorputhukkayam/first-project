<div class="untree_co-section product-section before-footer-section">
	<div class="container">
		  <div class="row">
			<% if(display && display.length> 0) { %>
			<% display.forEach(function(product) { %>

				<!-- Start Column 1 -->
				<div class="col-12 col-md-4 col-lg-3 mb-5">
					<input type="hidden" name="id" value="<%= product._id %>">
					<a class="product-item" href="/product?id=<%= product._id %>" > 
						<img src="/productImages/<%= product.image[0] %>" alt="Product-image" class="img-fluid product-thumbnail">
						<h3 class="product-title"><%= product.name %></h3>
						<strong class="product-price">$<%= product.price %></strong>
						<span class="icon-cross">
							<img src="/public/images/cross.svg" class="img-fluid">
					</span>
				</a>
			</div	> 
			<!-- End Column 1 -->

			<% }) %>
			<% } else { %>
				<div class="col-12 text-center text-danger">
					<h3>
						<%= typeof message !=='undefined' ? message : 'No Products found'   %>
					</h3>
				</div>
				<% } %>
		  </div>
	</div>
</div>


