    <script>
        $(document).ready(function () {
            $('form').on('submit', function (e) {
                e.preventDefault();

                // Get the values of the input fields
                var categoryName = $('#category_name').val().trim();
                var description = $('#description').val().trim();

                // Client-side validation
                if (categoryName === '' || description === '') {
                    Swal.fire({
                        icon: 'warning',
                        title: 'Oops...',
                        text: 'Please fill in both the category name and description.',
                    });
                    return; // Stop the form submission
                }

                // Proceed with AJAX request if validation passes
                $.ajax({
                    type: 'POST',
                    url: '/admin/addcat',
                    data: $(this).serialize(),
                    success: function (response) {
                        if (response.success) {
                            Swal.fire({
                                icon:'success',
                                title:'Success',
                                text:response.message,
                                timer:2000,
                                showConfirmButton:false
                            }).then(()=>{
                                window.location.href = '/admin/category';
                            });
                        } else {
                            // Display SweetAlert popup if the category already exists
                            Swal.fire({
                                icon: 'warning',
                                title: 'Oops...',
                                text: response.message,
                            });
                        }
                    },
                    error: function (error) {
                        console.error('Error',error);
                        Swal.fire({
                            icon:'error',
                            title:'Server Error',
                            text:'an error occured while creating the category',
                        });
                    }
                });
            });
        });
    </script>

    <script>
        document.getElementById('logout').addEventListener('click', async () => {
            const result = await Swal.fire({
                title: 'Are you sure ?',
                text: 'Do you really want to logout?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                timer: 3000,
                confirmButtonText: 'Yes logout'
            });
            if (result.isConfirmed) {
                const response = await fetch('/admin/logout', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                if (response.ok) {
                    Swal.fire(
                        'Logout',
                        'You have been logout successfully...',
                        'success'
                    ).then(() => {
                        window.location.href = '/admin';
                    });
                } else {
                    Swal.fire(
                        'Error',
                        'There is a error',
                        'error'
                    );
                }
            }
        });
    </script>

    <script>
        document.querySelectorAll('.block-unblock-btn').forEach(button => {
            button.addEventListener('click', function (event) {
                event.preventDefault();

                const action = button.getAttribute('data-action');
                const id = button.getAttribute('data-id');
                const url = button.getAttribute('href');
                const actionText = action === 'block' ? 'Block' : 'Unblock';

                Swal.fire({
                    title: `Are you sure you want to ${actionText} this category?`,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: `Yes, ${actionText}`,
                    cancelButtonText: 'No, cancel'
                }).then(result => {
                    if (result.isConfirmed) {
                        fetch(url, {
                            method: 'GET'
                        }).then(response => {
                            if (response.ok) {
                                Swal.fire({
                                    icon: 'success',
                                    title: `Category ${actionText === 'Block' ? 'blocked' : 'unblocked'} successfully`,
                                    showConfirmButton: false,
                                    timer: 1500
                                }).then(() => {
                                    location.reload();
                                });
                            } else {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Error',
                                    text: `Failed to ${actionText} the category.`,
                                });
                            }
                        }).catch(error => {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: `Failed to ${actionText} the category.`,
                            });
                        });
                    }
                });
            });
        });
