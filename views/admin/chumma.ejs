        <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.js"></script>

        <style>
			 .bg-image-vertical {
                position: relative;
                overflow: hidden;
                background-repeat: no-repeat;
                background-position: right center;
                background-size: auto 100%;
                }
                
                @media (min-width: 1025px) {
                .h-custom-2 {
                height: 100%;
                }
                }
        </style>  
