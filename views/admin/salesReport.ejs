                                        <% report.forEach((report,index)=> { %>




                                            <td><b>
                                                    <%=index+1%>
                                                </b></td>
                                            <td><b>
                                                    <%=report.orderId%>
                                                </b></td>
                                            <td>
                                                <%=report.deliveryAddress.name%>
                                            </td>
                                            <td>
                                                <%=report.createdAt.toDateString()%>
                                            </td>

                                            <td>
                                                <%=report.orderAmount%>
                                            </td>


                                </tr>
                                <% }) %>
                                <% } else { %>
                                    <p>No orders found for the selected date.</p>
                                    <% } %>
                            </tbody>
                            
                        </table>
