    <script>
        document.getElementById('logout').addEventListener('click', async () => {
            const result = await Swal.fire({
                title: 'Are you sure ?',
                text: 'Do you really want to logout?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                timer: 3000,
                confirmButtonText: 'Yes logout'
            });
            if (result.isConfirmed) {
                const response = await fetch('/admin/logout', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                if (response.ok) {
                    Swal.fire(
                        'Logout',
                        'You have been logout successfully...',
                        'success'
                    ).then(() => {
                        window.location.href = '/admin';
                    });
                } else {
                    Swal.fire(
                        'Error',
                        'There is a error',
                        'error'
                    );
                }
            }
        });
    </script>

    <script>
        $(document).ready(function () {
            $('.list-unlist-btn').on('click', function (e) {
                e.preventDefault();

                var productId = $(this).data('id');
                var action = $(this).data('action');
                var actionText = action === 'unlist' ? 'unlist' : 'list';
                var confirmText = action === 'unlist' ? 'Unlisted' : 'Listed';
                var confirmColor = action === 'unlist' ? '#d33' : '#3085d6';

                Swal.fire({
                    title: 'Are you sure?',
                    text: `You are about to ${actionText} this product.`,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: confirmColor,
                    cancelButtonColor: '#aaa',
                    confirmButtonText: `Yes, ${actionText} it!`
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: `/admin/productUnlistAndList?id=${productId}`,
                            type: 'GET',
                            success: function (response) {
                                Swal.fire({
                                    icon: 'success',
                                    title: confirmText,
                                    text: `Product has been ${confirmText.toLowerCase()}.`,
                                    timer: 2000,
                                    confirmButtonText: false
                                }).then(() => {
                                    location.reload();
                                });
                            },
                            error: function (error) {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Error',
                                    text: 'An error occurred while updating the product status.',
                                });
                            }
                        });
                    }
                });
            });
        });
    </script>

    <script>
        function confirmDelete(couponId) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    deleteCoupon(couponId);
                }
            });
        }

        function deleteCoupon(couponId) {
            axios.get(`/admin/deleteCoupon/${couponId}`)
                .then(response => {
                    console.log('responseData', response.data);
                    if (response.data.deleteSuccess) {
                        Swal.fire({
                            text: 'Coupon deleted...',
                            timer: 2000,
                            willClose: () => {
                                // Redirect to the coupon page after the alert closes
                                window.location.href = '/admin/viewCoupon';
                            }
                        });
                    }
                })
                .catch(error => {
                    console.error('Error deleting coupon:', error);
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: 'Something went wrong!'
                    });
                });
        }
    </script>


